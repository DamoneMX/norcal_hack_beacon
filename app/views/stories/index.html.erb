<style>
	.item {
  margin-bottom: 10px;
}
</style>
<div class="row">
	<div class="col-md-7">
		<h1>Twin Cities</h1>
	</div>
	<div class="col-md-5">
		<p>
		<%= link_to "http://localhost:3000" do %>
			Visualize the problem
		<% end %>
		<%= link_to new_story_path do %>
			Register a new story
		<% end %>
		</p>
	</div>
</div>
</div>
<div style="width: 100%;">
		<div id="container" class="js-masonry" data-masonry-options='{  "itemSelector": ".item", "gutter": 10, "isFitWidth": true }'>
			<% @stories.each do |story| %>
			  <div class="item">
			  	<img src="<%= story.photo %>" /> 
			  </div>
			<% end %>
		</div>
</div>
<div style="display:none;">
<h1>Listing stories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Orlat</th>
      <th>Orlng</th>
      <th>Deslat</th>
      <th>Deslng</th>
      <th>sss</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.name %></td>
        <td><%= story.content %></td>
        <td><%= story.origin %></td>
        <td><%= story.destination %></td>
        <td><%= story.orLat %></td>
        <td><%= story.orLng %></td>
        <td><%= story.desLat %></td>
        <td><%= story.desLng %></td>
        <td><%= story.photo %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_story_path %>
</div>
